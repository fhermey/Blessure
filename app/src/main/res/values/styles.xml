<resources>

    <!-- Base application theme. -->
    <style name="BlessureTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlessureTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlessureTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorLightGrey</item>
        <item name="android:textColorSecondary">@color/colorLightGrey</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
    </style>

    <style name="SidebarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:drawableTint">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorDarkGrey</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorLightGrey</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>
</resources>
